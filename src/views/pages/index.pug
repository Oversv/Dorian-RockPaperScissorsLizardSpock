<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Rock Paper Scissors
        <!--link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN", crossorigin="anonymous") -->
        link(rel="stylesheet", href="css/styles.css")
    body
        #modal-start.modal.modal--show <!-- AÃ±adir modal--show -->
            #modal-start-content.modal__content
                form#form-start-game
                    div
                        label(for="input-username") Write your nickname
                        input(type="text", id="input-username" placeholder="Pepe")
                    #select-game-type
                        label(for="") Select the game <!-- Establecer un id-->
                        input(type="button", value="Classic" class="button")
                        input(type="button", value="+ Lizard and Spock" class="button")
                    #select-game-round
                        label(for="") Select the number of rounds
                        input(type="button", value="1")
                        input(type="button", value="3")
                        input(type="button", value="5")
                        input(type="button", value="7")
                    div
                        input(type="button", value="Instructions cambiar nombre")
                    input(type="submit", id="go", value="GO")                    
        main
            #computer-user.player
                div
                    img(src="")#computer-choice-img.player__choice-img
                div.player__info
                    p#computer-player-username.player__username Computer
                    p#computer-player-result.player__result 0
            #info-game.info-game
                p#info-round Round 1
                p#round-winner
                button#start-game PLAY
            #user-player.player
                div
                    img(src="images/rock.svg", data-value="rock")#user-choice-img.player__choice-img
                    div
                        #move-choice.player__move-choice
                            ul#move-choice-list.player__move-choice-list
                                li: img(src="/images/rock.svg", alt="" class="img-small" data-value="rock")
                                li: img(src="/images/paper.svg", alt="" class="img-small" data-value="paper")
                                li: img(src="/images/scissors.svg", alt="" class="img-small" data-value="scissors")
                                li: img(src="/images/lizard.svg", alt="" class="img-small" data-value="lizard")
                                li: img(src="/images/spock.svg", alt="" class="img-small" data-value="spock")
                div.player__info
                    p#user-player-username.player__username Pepe
                    p#user-player-result.player__result 0
                    p#timer.player__timer
        
        #modal-result.modal
            #modal-result-content.modal__content 
        script(src="js/scripts.js")
